<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >
        <ImageView
            android:id="@+id/iv_bckk"
            android:onClick="back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book an appointment"
            android:layout_centerHorizontal="true"
            android:textColor="#C51162"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:src="@drawable/aa1" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_90"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-130dp"
        android:layout_gravity="center"
        android:text="Medico"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="#2799EF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="-35dp"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:id="@+id/et_txt"
            android:onClick="nexxt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray_90"
            android:backgroundTint="@color/gray_1"
            android:drawableLeft="@drawable/ic_baseline_eco_24"
            android:drawablePadding="16dp"
            android:paddingLeft="10dp"
            android:hint="Select Area"
            android:textColorHint="#C8000000"
            android:drawableRight="@drawable/ic_baseline_my_location_24"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/et_search"
            android:onClick="list_fun"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray_90"
            android:backgroundTint="@color/gray_1"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:drawablePadding="16dp"
            android:paddingLeft="10dp"
            android:hint="Search Doctor by Speciality"
            android:textColorHint="#C8000000"
            android:paddingRight="10dp"
            tools:ignore="OnClick"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/et_datee"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray_90"
            android:backgroundTint="@color/gray_1"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:drawablePadding="16dp"
            android:paddingLeft="10dp"
            android:hint="Select Date"
            android:textColorHint="#C8000000"
            android:paddingRight="10dp"
            android:layout_marginBottom="44dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:backgroundTint="#2799EF" />

    </LinearLayout>


</LinearLayout>